<div class="main-container">
  <div class="spec">
    <h1 class="text-center">統計</h1>
    <div class="row mb-4">
      <div class="col-md-6 mb-2">
          <h2 class="text-center">ライブ記録</h2>
          <div class="card pt-3 pb-1">
              <p class="text-center">ライブ記録の総数: <%= @total_live_records ? "#{@total_live_records}回" : "データがありません" %></p>
               <p class="text-center">半年間のライブ数: <%= @half_year_live_count %>回</p>
              <p class="text-center">今月のライブ数: <%= @this_month_live_count ? "#{@this_month_live_count}回" : "データがありません" %></p>
              <p class="text-center">ライブに参加したアーティスト数: <%= @unique_artist_count ? "#{@unique_artist_count}組" : "データがありません" %></p>
          </div>
      </div>
      <div class="col-md-6">
        <h2 class="text-center">支出</h2>
        <div class="card pt-3 pb-1">
          <p class="text-center">ライブとグッズの総支出 : <%= @total_expense ? "#{@total_expense}円" : "データがありません" %></p>
          <p class="text-center">ライブの総支出 : <%= @live_expense ? "#{@live_expense}円" : "データがありません" %></p>
          <p class="text-center">グッズの総支出 : <%= @goods_expense ? "#{@goods_expense}円" : "データがありません" %></p>
          <p class="text-center">今月のグッズ購入数: <%= @this_month_goods_count ? "#{@this_month_goods_count}回" : "データがありません" %></p>
        </div>
      </div>
    </div>
    <% if @member_goods_ranking && @member_goods_ranking.values.sum > 0%>
      <h3 class="text-center">グッズランキング</h3>
      <ol class="list-group mb-3">
        <% @member_goods_ranking.sort_by { |_, value| -value }.each_with_index do |(member_name, total), index| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= index + 1 %>. <%= member_name %>
            <span class="badge badge-primary badge-pill"><%= total %>円</span>
          </li>
        <% end %>
      </ol>
    <% end %>
    <% if @top_venues && @top_venues.values.sum > 0  %>
      <div class="mb-3">
        <h3 class="text-center">会場ランキング</h3>
        <ol class="list-group">
          <% @top_venues.each_with_index do |(venue_id, count), index| %>
            <% venue = Venue.find_by(id: venue_id) %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= index + 1 %>. <%= venue.name %>
              <span class="badge badge-primary badge-pill">訪問回数: <%= count %></span>
            </li>
          <% end %>
        </ol>
      </div>
    <% end %>
    <div class="row">
      <% if @monthly_live_counts %>
        <div class="col-md-6 col-12 mb-4">
          <h2>月別ライブ数</h2>
          <div class="bar" style="width: 100%; height: 300px;">
              <canvas id="monthlyLiveChart"></canvas>
          </div>
        </div>
      <% end %>
      <% if @weekly_live_counts %>
        <div class="col-md-6 col-12 mb-4">
          <h2>曜日別のライブ数</h2>
          <div class="bar" style="width: 100%; height: 300px;">
           <canvas id="weeklyChart"></canvas>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <% if @genre_counts && @genre_counts.values.sum > 0%>
        <div class="mb-4 text-center mx-auto">
          <h2>ジャンル別の数</h2>
          <div style="width: 350px; height: 350px;">
              <canvas id="myChart"></canvas>
          </div>
        </div>
      <% end %>
      <% if @category_expenses && @category_expenses.values.sum > 0 %>
        <div class="mb-4 text-center mx-auto">
          <h2>グッズカテゴリー別の支出</h2>
          <div style="width: 350px; height: 350px;">
              <canvas id="expenseChart"></canvas>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
document.addEventListener('turbolinks:load', function() {
    var ctx = document.getElementById('myChart').getContext('2d');

    var labels = [<% @genre_counts.keys.each do |genre_name| %>"<%= genre_name %>",<% end %>];
    var data = [<% @genre_counts.values.each do |count| %><%= count %>,<% end %>];

    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    });
});
</script>
<script>
document.addEventListener('turbolinks:load', function() {
    var ctx = document.getElementById('expenseChart').getContext('2d');
    if (ctx) {
        var labels = [<% @category_expenses.keys.each do |category_name| %>"<%= j(category_name) %>",<% end %>];
        var data = [<% @category_expenses.values.each do |expense| %><%= expense %>,<% end %>];

        var expenseChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            }
        });
    }
});
</script>
<script>
document.addEventListener('turbolinks:load', function() {
    var ctx = document.getElementById('monthlyLiveChart').getContext('2d');
    if (ctx) {
        var labels = [<% @monthly_live_labels.each do |month| %>"<%= j(month) %>",<% end %>];
        var data = [<% @monthly_live_counts.each do |count| %><%= count %>,<% end %>];

        var monthlyLiveChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'ライブ数',
                    data: data,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    }
});
</script>

  <script>
    document.addEventListener('turbolinks:load', function() {
      var ctx = document.getElementById("weeklyChart").getContext("2d");
      var data = {
        labels: ["日", "月", "火", "水", "木", "金", "土"],
        datasets: [
          {
            label: "曜日別ライブ数",
            data: <%= @weekly_live_counts.values.to_json %>,
            backgroundColor: "rgba(75, 192, 192, 0.2)",
            borderColor: "rgba(75, 192, 192, 1)",
            borderWidth: 1,
          },
        ],
      };
      var options = {
         plugins: {
            legend: {
                display: false
            }
        },
        scales: {
          y: {
            beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
          },
        },
      };
      var weeklyChart = new Chart(ctx, {
        type: "bar",
        data: data,
        options: options,
      });
    });
  </script>
