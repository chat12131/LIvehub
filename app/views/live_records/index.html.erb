<div class="main-container d-flex flex-column align-items-center justify-content-start">
  <div class="container pt-4">
    <div class="row">
      <div>
        <%= link_to "新規作成", new_live_record_path, class: "btn btn-success mb-3" %>
      </div>
    </div>
    <div class="list-group">
      <% @live_records.each do |live_record| %>
        <a href="<%= live_record_path(live_record) %>" class="list-group-item list-group-item-action mb-2 d-flex flex-wrap align-items-center" style="background-color: white;">
          <div class="d-flex w-100 justify-content-between mb-2">
            <h5 class="mb-1"><%= live_record.name %></h5>
          </div>
          <div class="d-flex flex-wrap">
            <p class="mb-2 mr-3 flex-fill">
              <strong>日付:</strong> <%= l(live_record.date, format: "%-m月%-d日") %>
            </p>
            <% if live_record.artist_id.present? %>
              <p class="mb-2 mr-3 flex-fill"><strong>アーティスト:</strong> <%= live_record.artist.display_name %></p>
            <% end %>
            <p class="mb-2 mr-3 flex-fill">
              <strong>会場:</strong> <%= Venue.find(live_record.venue_id).name %>
              <% if Venue.find(live_record.venue_id).area.present? %>
                (<%= Venue.find(live_record.venue_id).area %>)
              <% end %>
            </p>
             <% if live_record.ticket_price.present? %>
              <p class="mb-2 mr-3 flex-fill"><strong>チケット代:</strong> <%= live_record.ticket_price %>円</p>
            <% end %>
            <% if live_record.drink_price.present? %>
              <p class="mb-2 mr-3 flex-fill"><strong>ドリンク代:</strong> <%= live_record.drink_price %>円</p>
            <% end %>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
